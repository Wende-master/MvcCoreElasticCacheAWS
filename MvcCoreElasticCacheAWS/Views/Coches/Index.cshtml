@model IEnumerable<MvcCoreElasticCacheAWS.Models.Coche>

@{
    ViewData["Title"] = "Index";
}

<h1>Coches XML Elastic Cache</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-secondary">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>
                <td>
                    <a class="" asp-controller="Coches"
                       asp-action="Details" asp-route-id="@item.IdCoche">
                        <img src="@Html.DisplayFor(modelItem => item.Imagen)" width="200" height="200" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
